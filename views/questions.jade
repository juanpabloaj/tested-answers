extends layout
block content
  div(ng-controller="QuestionsController").row
    .col-sm-8.col-sm-offset-1
      include ./login.jade
      div.text-center
        h4 Create a question and see the output generated by the code answers.
        h3
          a(href="/questions/new") Create your first question
      br
      h3 Questions
      div(ng-repeat="question in questions| orderBy:'-createdAt'")
        hr
        div
          h4
            a(href="/questions/{{ question.$id }}") {{ question.title | capitalize }}
          div.row
            div.pull-left.col-sm-4 {{ question.language }}
              span(ng-show="question.passed").text-success.col-xs-offset-1 {{ question.passed }}
                span.glyphicon.glyphicon-ok
              span(ng-show="question.failed").text-danger.col-xs-offset-1 {{ question.failed }}
                span.glyphicon.glyphicon-remove
            div.pull-right {{ question.createdAt | date:'medium' }} 
               a(href='https://github.com/{{ question.author }}') {{question.author}}
          div.clearfix
