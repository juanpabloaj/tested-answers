extends layout
block content
  div(ng-controller="QuestionsController").row
    div.col-sm-8
      include ./login.jade
      h3 Questions
      div(ng-repeat="question in questions| orderBy:'-createdAt'")
        hr
        div
          a(href="/questions/{{ question.$id }}") {{ question.title }}
          div.pull-right {{ question.createdAt | date:'medium' }} {{question.author}}
