extends layout
block content
  div(ng-controller="QuestionsController").row
    div.col-sm-8
      include ./login.jade
      div.text-center
        h4 Create a question and see the output generated by the code answers.
        h3
          a(href="/questions/new") Create your first question
      br
      h3 Questions
      div(ng-repeat="question in questions| orderBy:'-createdAt'")
        hr
        div
          h4
            a(href="/questions/{{ question.$id }}") {{ question.title }}
          div
            div.pull-left {{ question.language }}
            div.pull-right {{ question.createdAt | date:'medium' }} {{question.author}}
          div.clearfix
